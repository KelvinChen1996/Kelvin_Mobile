<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.williamsumitromytextview.pikachisemarket.activities.DetailFranchiseHome">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbardetailfranchisehome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Pikachise Market" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detailfranchisehomegambar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner1" />

        <ImageView
            android:id="@+id/detailfranchisehomeBookmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/detailfranchisehomegambar"
            android:layout_toStartOf="@+id/detailfranchisehomeCall"
            android:scaleType="fitXY"
            android:src="@drawable/bookmark" />

        <ImageView
            android:id="@+id/detailfranchisehomeCall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/detailfranchisehomeShare"
            android:layout_toStartOf="@+id/detailfranchisehomeShare"
            android:scaleType="fitXY"
            android:src="@drawable/phone" />

        <ImageView
            android:id="@+id/detailfranchisehomeShare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/detailfranchisehomegambar"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@drawable/share" />
    </RelativeLayout>

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawerLayoutdetailfranchisehome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/detailhomecontainerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
