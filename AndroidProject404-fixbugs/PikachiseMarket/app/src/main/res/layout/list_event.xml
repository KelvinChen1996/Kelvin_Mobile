<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cont_item_root"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    android:background="@color/colorwhitegold"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/Event_Gambar"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/event1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Event_Judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Franchise Event Ce ni Ce pai"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Event_Jadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Senin, 19 Maret 2017, 21:00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Event_Alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Jl. Thamrin"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:scaleType="fitXY"
        android:src="@drawable/ticket" />


</LinearLayout>
